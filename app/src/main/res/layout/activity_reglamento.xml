<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        tools:context=".ConfirmacionActivity">

        <TextView
            android:id="@+id/UAS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/universidad_autonoma_de_sinaloa"
            android:textColor="#1A1A1A"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/FIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/facultad_de_informatica_culiacan"
            android:textColor="#444444"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/UAS" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHorarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/FIC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvHorarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HORARIOS"
                    android:textColor="@color/Azul_Fic"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/Cafe_Fic" />

                <TextView
                    android:id="@+id/tvLabAyB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/laboratorio_de_computo_a_lunes_a_viernes_de_7_00_a_13_00_horas_y_de_14_00_a_20_00_horas"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

                <TextView
                    android:id="@+id/tvLabC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/laboratorio_de_computo_c_lunes_a_viernes_de_8_00_a_20_00_horas"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvAuditorio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Auditorio: Lunes a Viernes de 7:00 a 20:00 horas"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardReglamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardHorarios">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvReglamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGLAMENTO"
                    android:textColor="@color/Azul_Fic"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/Cafe_Fic" />

                <TextView
                    android:id="@+id/tvReglamentoLista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="1. Presentar credencial actualizada de la Facultad o Identificación oficial.\n2. Mantener buena conducta al interior.\n3. Hacer uso adecuado del equipo y mobiliario.\n4. Cuidar el mobiliario, sujetándose a los mecanismos de control e higiene.\n5. Utilizar las instalaciones exclusivamente con propósitos académicos.\n6. No introducir ni consumir bebidas o alimentos.\n7. Hablar en voz baja.\n8. Reportar al encargado mal funcionamiento.\n9. No sustraer material o equipo."
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="#EEEEEE" />

                <TextView
                    android:id="@+id/tvNota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nota importante:"
                    android:textColor="#D32F2F"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNotaLista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingExtra="4dp"
                    android:text="El incumplimiento puede causar: desalojo, suspensión temporal/definitiva o reporte al Consejo Técnico."
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>